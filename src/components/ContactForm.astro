---
import SectionTitle from "./UI/SectionTitle.astro";
import Button from "./UI/Button.astro";
---

<section class="flex flex-col justify-center md:flex-row mx-10 py-10 text-neutral-200">
    <div class="md:block md:w-1/2 ">
        <div class="flex flex-col justify-center items-center">
            <SectionTitle>Contact Me</SectionTitle>
        </div>
        <div>
            <form class="w-full" action="#" method="post">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-bold mb-2">Name</label>
                    <input type="text" id="name" name="name" class="bg-neutral-800 border border-red-500 rounded w-full py-2 px-3" placeholder="Enter your name">
                </div>
                <div class="mb-4">
                    <label for="name" class="block text-sm font-bold mb-2">Email</label>
                    <input type="text" id="name" name="name" class="bg-neutral-800 border border-red-500 rounded w-full py-2 px-3" placeholder="Enter your name">
                </div>
                <div class="mb-6">
                    <label for="message" class="block text-sm font-bold mb-2">Message</label>
                    <textarea id="message" name="message" rows="10" class="bg-neutral-800  w-full border border-red-500 p-2 rounded-md" placeholder="Your Message" required></textarea>
                </div>
                <div class="flex justify-center items-center py-8 ">
                    <Button>Submit</Button>
                </div>
            </form>
        </div>
<section/>