---
import Button from "./Button.astro";
const { title, description, img, onClick } = Astro.props;
---

<article class="px-10 py-4 md:px-0 w-full">
  <h2 class="text-2xl font-semibold text-red-500 pb-2 mb-4">{title}</h2>
  <div class="flex flex-col md:flex-row gap-4">
    <div class="relative md:w-1/2">
      <div
        class="bg-neutral-700 p-2 rounded-md flex justify-center items-center shadow-lg group"
      >
        <img class="rounded-md" src={img} alt="" />
        <div
          class="absolute inset-0 flex justify-center items-center opacity-0 rounded-md bg-black bg-opacity-30 group-hover:opacity-100 transition-opacity"
        >
          <Button text="Go to project" onClick={onClick} />
        </div>
      </div>
    </div>
    <div class="md:w-1/2">
      <p class="md:py-0 text-lg md:pl-10">
        {description}
      </p>
      <div class="flex justify-center relative my-14">
        <Button text="Go to project" onClick={onClick} />
      </div>
    </div>
  </div>
</article>
