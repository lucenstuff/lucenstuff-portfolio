---
import Button from "./Button.astro";
const { title, description, img } = Astro.props;
---

<div class="px-10 py-4 md:px-0 w-full">
  <h2 class="text-2xl font-medium text-red-500 pb-2 mb-4">{title}</h2>
  <div class="flex flex-col md:flex-row gap-4">
    <div
      class="bg-neutral-700 p-2 rounded-md md:w-1/2 flex justify-center items-center shadow-lg"
    >
      <img class="rounded-md aspect-[4/3]" src={img} alt="" />
    </div>
    <div class="md:w-1/2">
      <p class="md:py-0 text-lg md:pl-10">
        {description}
      </p>
      <div class="flex justify-center py-10">
        <Button>Go to project</Button>
      </div>
    </div>
  </div>
</div>
